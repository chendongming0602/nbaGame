.alls{
  width: 100%;
  height: 100%;
  background-color: rgba(1,1,1,0.1); 
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.imgs{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 20rpx;
  right: 0;
  bottom: 0;
  z-index: -1;
}
.nameA{
  font-size: 80rpx;
  color: #333;
  font-weight: bold;
}
.but{
  margin: 80rpx auto 0;
  width: 300rpx;
  line-height: 300rpx;
  border-radius: 50%;
  background: #0f6cb4;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
  font-weight: bold;
}
@keyframes butA{
  0%{
    transform: scale(1) rotate(0);
    opacity: 1;
  }
  40%{
    transform: scale(0.8) rotate(360deg);
    opacity: 0;
  }
  60%{
    transform: scale(1) rotate(-360deg);
    
  }
  70%{
    transform: scale(1) rotate(720deg);
  }
  100%{
    transform: scale(1) rotate(720deg);
    opacity: 1;
  }
}
.butA{
  animation: butA 3s linear infinite;
}

.name1{
  color: rgb(59, 59, 59);
}

.up{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  margin-left: -35rpx;
  bottom: 20rpx;
}

@keyframes upImgA{
  0%{
    transform: translateY(0rpx);
    opacity: 1;
  }
  100%{
    transform: translateY(-50rpx);
    opacity: 0;
  }
}
.upImgA{
  animation: upImgA 1.5s linear infinite;
}