.picBox{
  width: 100%;
  height: 100vh;
  position: relative;
}
.picBg{
  width: 100%;
  height: 100%;
  position: absolute;
}
.pic{
  width: 100px;
  height: 100px;
  position: absolute;
  border-radius: 50%;
  z-index: 66;
  border: 2px solid #333;
}
.can{
  position: absolute;
  width: 100%;
  height: 100vh;
  top: -1000px;
}
.baocun{
  position: absolute;
  z-index: 66;
  top: 200rpx;
  padding: 50rpx;
  background: #f0f;
}
.btn{
  position: absolute;
  bottom: 80rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx;
}
.btn view{
  line-height: 70rpx;
  background: linear-gradient(to bottom, #369eff, #54acff);
  color: #fff;
  width: 40%;
  min-width: 180rpx;
  text-align: center;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.input{
  height: 68rpx;
  text-align: center;
  border: 2px solid rgb(196, 196, 196);
  margin: 0 15rpx;
  font-size: 35rpx;
  font-weight: bold;
  border-radius: 5rpx;

  /* color:  */
}
