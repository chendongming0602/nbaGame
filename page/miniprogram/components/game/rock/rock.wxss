.box{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
image{
  display: block;
}
.boxImg{
  position: absolute;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: -1;
  opacity: 0.1;
}
.top{
  top: 50rpx;
  transform: rotate(180deg);
}
.bto{
  bottom: 50rpx;
}
.mys{
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%);
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
}
.bisi{
  color: rgb(255, 81, 0);
}
.allImg{
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  left: 50%;
  margin-left: -125rpx; 
}
.dong{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.dong image{
  width: 100%;
  height: 100%;
}
.selectImg{
  width: 100%;
  /* height: 100%; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.selectImg image{
  width: 200rpx;
  height: 100px;
  border: 2px solid #0f6cb4;
  border-radius: 20rpx;
}
.selectImg .selectImgAc{
  border: 3px solid #e61a0f;
  border-radius: 10rpx;
}
.shoushou{
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #0f6cb4;
  margin-top: 20rpx;
}
.dian{
  width: 150rpx;
  line-height: 150rpx;
  background: #333;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  text-align: center;
  color: #fff;
  font-weight: bold;
  font-size: 42rpx;
}

@keyframes dianA{
  0%{
    opacity: 0.1;
    transform: translate(-50%,-50%) scale(0.8)
  }
  50%{
    opacity: 1;
    transform: translate(-50%,-50%) scale(1.2)
  }
  100%{
    opacity: 0.1;
    transform: translate(-50%,-50%) scale(0.8)
  }
}
.dianA{
  animation: dianA 3s linear infinite;
}

.guize{
  width: 100%;
  height: 100vh;
  position: absolute;
  z-index: 50;
  top: 0;
  left: 0;
  background: #000;
}

.guize{
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  padding: 50rpx;
  padding-top: 160rpx;
}
.guize .title{
  font-size: 60rpx;
  color: #0f6cb4;
}
.guize .wu{
  font-size: 60rpx;
  color: #ddd;
  margin-top: 80rpx;
}
.guize view{
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 50rpx;
}
.guize .lie{
  color: rgb(240, 52, 52);
  font-size: 30rpx;
}
@keyframes guizeA{
  0%{
    option: 1;
    transform: scale(1);
  }
  90%{
    option: 1;
    transform: scale(0.9);
  }
  100%{
    opacity: 0;
    transform: scale(0);
  }
}
.guizeA{
  animation: guizeA 1.5s linear 5s;
  animation-fill-mode: forwards;
}
.zhong{
  width: 100%;
  height: 100%;
}