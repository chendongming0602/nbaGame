.pageBox{
  min-height: 100vh;
  background:linear-gradient(180deg,rgb(17, 117, 134) 0%,rgb(137, 217, 231) 100%);
}
.topBox{
  padding: 30rpx;
}
.picBox{
  text-align: center;
}
.pic{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto;
  background: #fff;
  box-shadow:0px 0px 5px 0px rgb(82, 80, 80);
}
.name{
  font-size: 30rpx;
  margin-top: 10rpx;
  font-weight: bold;
  color: #fff;
}
.teamImg{
  width: 100%;
  height: 400rpx;
  margin-top:30rpx;
  border-radius: 10rpx; 
}
.classItem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.classItem view{
  line-height: 60rpx;
  background: #0f6cb4;
  padding: 0 35rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 5rpx;
}
.items{
  padding: 0 30rpx;
  margin-top: 10rpx;
}