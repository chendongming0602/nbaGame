.box{
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
image{
  display: block;
}
.boxImg{
  position: absolute;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  z-index: -1;
  opacity: 0.1;
}
.top{
  top: 50rpx;
  transform: rotate(180deg);
}
.bto{
  bottom: 50rpx;
}
.allImg{
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  left: 50%;
  margin-left: -125rpx; 
}
.dong{
  width: 100%;
  height: 300rpx;
  position: relative;
}
.dong image{
  width: 100%;
  height: 100%;
}
.dian{
  width: 100rpx;
  height: 100rpx;
  background: rgb(255, 81, 0);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

@keyframes dianA{
  0%{
    opacity: 1;
    transform: translate(-50%,-50%) scale(1)
  }
  50%{
    opacity: 0.5;
    transform: translate(-50%,-50%) scale(1.2)
  }
  100%{
    opacity: 1;
    transform: translate(-50%,-50%) scale(1)
  }
}
.dianA{
  animation: dianA 2s linear infinite;
}